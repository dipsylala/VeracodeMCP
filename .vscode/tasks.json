{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "Build Veracode MCP Server",
			"type": "shell",
			"command": "npm",
			"args": [
				"run",
				"build"
			],
			"group": "build",
			"problemMatcher": [
				"$tsc"
			],
			"isBackground": false,
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": false,
				"panel": "shared",
				"showReuseMessage": true,
				"clear": false
			}
		},
		{
			"label": "Start Veracode MCP Server",
			"type": "shell",
			"command": "node",
			"args": [
				"build/index.js"
			],
			"group": "build",
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": false,
				"panel": "new",
				"showReuseMessage": true,
				"clear": false
			},
			"isBackground": true,
			"dependsOn": "Build Veracode MCP Server",
			"problemMatcher": []
		},
		{
			"label": "Test Veracode Connection",
			"type": "shell",
			"command": "node",
			"args": [
				"examples/query-apps.js"
			],
			"group": "test",
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": false,
				"panel": "shared",
				"showReuseMessage": true,
				"clear": false
			},
			"dependsOn": "Build Veracode MCP Server",
			"problemMatcher": []
		},
		{
			"label": "Test Veracode Search",
			"type": "shell",
			"command": "node",
			"args": [
				"examples/test-search.js"
			],
			"group": "test",
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": false,
				"panel": "shared",
				"showReuseMessage": true,
				"clear": false
			},
			"dependsOn": "Build Veracode MCP Server",
			"problemMatcher": []
		},
		{
			"label": "Example: Get SCA Results (Custom App)",
			"type": "shell",
			"command": "node",
			"args": [
				"examples/get-sca-results.js",
				"${input:applicationName}"
			],
			"group": "test",
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": false,
				"panel": "shared",
				"showReuseMessage": true,
				"clear": false
			},
			"dependsOn": "Build Veracode MCP Server",
			"problemMatcher": []
		},
		{
			"label": "Example: Get SCA Results (Custom App)",
			"type": "shell",
			"command": "node",
			"args": [
				"examples/get-sca-results.js",
				"${input:applicationName}"
			],
			"group": "test",
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": false,
				"panel": "shared",
				"showReuseMessage": true,
				"clear": false
			},
			"dependsOn": "Build Veracode MCP Server",
			"problemMatcher": []
		},
		{
			"label": "Example: Find SCA Apps",
			"type": "shell",
			"command": "node",
			"args": [
				"examples/find-sca-apps.js"
			],
			"group": "test",
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": false,
				"panel": "shared",
				"showReuseMessage": true,
				"clear": false
			},
			"dependsOn": "Build Veracode MCP Server",
			"problemMatcher": []
		}
	],
	"inputs": [
		{
			"id": "applicationName",
			"description": "Enter the application name to analyze",
			"default": "YourAppName",
			"type": "promptString"
		}
	]
}